    <div class="card shadow" style="width: 18rem;">
        <img src="~/images/imagen_2025-05-17_165552298.png" class="card-img-top" alt="Foto de miembro">
        <div class="card-body">
            <h5 class="card-title">Alexander Cahueñas</h5>
            <p class="card-text"><strong>Correo:</strong> alexanderky08@gmail.com</p>
            <p class="card-text"><strong>Intereses:</strong> GYM, videojuegos, Deportes</p>
        </div>
    </div>
    <<div class="card shadow" style="width: 18rem;">
        <img src="~/images/WhatsApp Image 2025-05-17 at 16.54.33.jpeg" class="card-img-top" alt="Foto de miembro">
        <div class="card-body">
            <h5 class="card-title">David Puga</h5>
            <p class="card-text"><strong>Correo:</strong> dpuga4621@gmail.com</p>
            <p class="card-text"><strong>Intereses:</strong> Musica, videojuegos, Creacion de pags web</p>
        </div>
    </div>
    <div class="card shadow" style="width: 18rem;">
        <img src="https://via.placeholder.com/150" class="card-img-top" alt="Foto de miembro">
        <div class="card-body">
            <h5 class="card-title">Mateo Cisneros</h5>
            <p class="card-text"><strong>Correo:</strong> Mateo.Cisneros@gmail.com</p>
            <p class="card-text"><strong>Intereses:</strong> IA, videojuegos, robótica</p>
        </div>
    </div>
</div>

<!-- Formulario para preguntar al chatbot -->
<div class="container mt-5">
    <h2 class="text-center mb-3">Pregúntale a C.P.C BOT</h2>

    <form asp-controller="Home" asp-action="Index" method="get">
        <div class="input-group mb-3">
            <input type="text" class="form-control" name="prompt" placeholder="Escribe tu pregunta aquí..." />
            <button class="btn btn-primary" type="submit">Preguntar</button>
        </div>
    </form>

    @if (!string.IsNullOrEmpty(Model?.ResponseText))
    {
        <div class="p-4 bg-light border rounded shadow-sm">
            <h5>Respuesta:</h5>
            <pre style="white-space: pre-wrap;">@Model.ResponseText</pre>
        </div>
    }
</div>

<!-- Pie de página -->
<footer class="mt-5 p-3 text-center text-white" style="background-color: #343a40;">
    <p>© TALLER GRUPAL CHATBOX.</p>
</footer>
